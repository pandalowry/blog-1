<h4>Post details: </h4>
<br />
<p>
	<%= @row['content'] %>
	<br />
	Added at <%=  %>
</p>

<br />
<h4>Comments:</h4>
<br />
<% @comments.each do |comment| %>
	<p>
		<%= comment['content'] %>
		<br />
		<span style="font-size: 75%; color: #999">Added at <%= comment['created_date'] %></span>
	</p>	
<% end %>
<p>
	<from action="/details/<%=  %>" method="POST" role="from">
		<textarea name="content" class="form-control" rows="1" placeholder="Type comment text here"></textarea>
		<br />
		<button type="submit" class="btn btn-primary">Add comment</button>
	</from>	
</p>
